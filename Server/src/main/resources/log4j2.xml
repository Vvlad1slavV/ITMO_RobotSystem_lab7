<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %highlight{%-5level %logger{36} - %msg%n}{FATAL=bg__red, ERROR=red, WARN=yellow, INFO=	Magenta}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="ru.javastudy.examples.User" level="debug" additivity="true">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>


</Configuration>